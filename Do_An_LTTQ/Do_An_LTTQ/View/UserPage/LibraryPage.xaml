<Page x:Class="Do_An_LTTQ.View.UserPage.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Do_An_LTTQ.View.UserPage"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="995"
      Title="LibraryPage">

    <Grid>
        <Border Margin="20" CornerRadius="30" BorderThickness="0" Background="#E8D9F0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Height="70" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="15,0">
                        <TextBlock Text="My Library" FontSize="28" FontWeight="Bold" 
                                   FontFamily="Comic Sans MS" Foreground="#333"/>
                    </StackPanel>

                    <Border Grid.Column="1" CornerRadius="8" Width="280" BorderThickness="8" 
                            BorderBrush="White" Height="40" HorizontalAlignment="Right" Margin="0,0,10,0">
                        <Grid Background="White" Margin="0,-8,0,-8">
                            <fa:ImageAwesome Icon="Search" Width="16" Height="16"
                                             VerticalAlignment="Center" HorizontalAlignment="Left"
                                             Margin="10" Foreground="Gray"/>
                            <TextBox Background="Transparent" BorderThickness="0" 
                                     Padding="35,0,10,0" VerticalContentAlignment="Center"
                                     FontSize="13" Text="Search your games..."
                                     Foreground="Gray"/>
                        </Grid>
                    </Border>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" CornerRadius="15" BorderThickness="0" Background="White" Margin="0,0,15,0">
                        <StackPanel>
                            <TextBlock Text="All Games" FontSize="18" FontWeight="Bold" 
                                       FontFamily="Comic Sans MS" Foreground="#333" Margin="15,15,15,10"/>
                            <Rectangle Height="1" Fill="#E0E0E0" Margin="10,0"/>

                            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                <StackPanel x:Name="GameListSidebar">
                                    <Border Margin="10,5" Padding="5" CornerRadius="8" Cursor="Hand" Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Margin="0,0,10,0">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="Minecraft" FontSize="14" FontWeight="SemiBold" 
                                                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="10,5" Padding="5" CornerRadius="8" Cursor="Hand" Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Margin="0,0,10,0">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="League of Legends" FontSize="14" FontWeight="SemiBold" 
                                                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>

                                    <Border Margin="10,5" Padding="5" CornerRadius="8" Cursor="Hand" Background="Transparent">
                                        <StackPanel Orientation="Horizontal">
                                            <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Margin="0,0,10,0">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="Genshin Impact" FontSize="14" FontWeight="SemiBold" 
                                                       VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>

                    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <Border Background="White" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome Icon="Bullhorn" Width="20" Height="20" 
                                                             Foreground="#FF9800" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Game Updates" FontSize="18" FontWeight="Bold" 
                                                       FontFamily="Comic Sans MS" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="Latest news" FontSize="11" Foreground="#888" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel>
                                        <Border Background="#FFF3E0" CornerRadius="10" Padding="12" Margin="0,5">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Minecraft" FontSize="14" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS" Foreground="#E65100"/>
                                                    <Border Background="#FF9800" CornerRadius="3" Padding="4,2" Margin="8,0,0,0">
                                                        <TextBlock Text="NEW UPDATE" FontSize="8" Foreground="White" FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="Version 1.20 - Trails, Tales Update is now available!"
                                                           FontSize="12" Foreground="#555" TextWrapping="Wrap"/>
                                                <TextBlock Text="2 days ago" FontSize="10" Foreground="#888" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                        <Border Background="#E3F2FD" CornerRadius="10" Padding="12" Margin="0,5">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                    <TextBlock Text="Valorant" FontSize="14" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS" Foreground="#1565C0"/>
                                                    <Border Background="#2196F3" CornerRadius="3" Padding="4,2" Margin="8,0,0,0">
                                                        <TextBlock Text="PATCH" FontSize="8" Foreground="White" FontWeight="Bold"/>
                                                    </Border>
                                                </StackPanel>
                                                <TextBlock Text="Episode 8 Act 1 brings new Agent and map changes" 
                                                           FontSize="12" Foreground="#555" TextWrapping="Wrap"/>
                                                <TextBlock Text="5 days ago" FontSize="10" Foreground="#888" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="White" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome Icon="ClockOutline" Width="20" Height="20" 
                                                             Foreground="#9C27B0" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Recent Games" FontSize="18" FontWeight="Bold" 
                                                       FontFamily="Comic Sans MS" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="Last 7 days" FontSize="11" Foreground="#888" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>
                                    <StackPanel>
                                        <Border Background="#F8F8F8" CornerRadius="10" Margin="0,5" 
                                                Height="90" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="100" Height="70" 
                                                           RadiusX="8" RadiusY="8" Margin="10">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                                                    <TextBlock Text="Minecraft" FontSize="16" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS"/>
                                                    <TextBlock Text="2 hours ago" FontSize="11" Foreground="#666" Margin="0,3,0,0"/>
                                                </StackPanel>

                                                <Button Style="{StaticResource PurplePlayButtonStyle}"
                                                        Grid.Column="2" Content="PLAY" Background="#9C27B0" 
                                                        Foreground="White" FontWeight="Bold" FontSize="12" 
                                                        Height="30" Width="80" Margin="0,0,10,0"
                                                        BorderThickness="0" Cursor="Hand" FontFamily="Comic Sans MS">
                                                </Button>
                                            </Grid>
                                        </Border>

                                        <Border Background="#F8F8F8" CornerRadius="10" Margin="0,5" 
                                                Height="90" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="100" Height="70" 
                                                           RadiusX="8" RadiusY="8" Margin="10">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                                                    <TextBlock Text="Valorant" FontSize="16" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS"/>
                                                    <TextBlock Text="Yesterday" FontSize="11" Foreground="#666" Margin="0,3,0,0"/>
                                                </StackPanel>

                                                <Button Style="{StaticResource PurplePlayButtonStyle}"
                                                        Grid.Column="2" Content="PLAY" Background="#9C27B0" 
                                                        Foreground="White" FontWeight="Bold" FontSize="12" 
                                                        Height="30" Width="80" Margin="0,0,10,0"
                                                        BorderThickness="0" Cursor="Hand" FontFamily="Comic Sans MS">
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Background="White" CornerRadius="15" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <Grid Margin="0,0,0,10">
                                        <StackPanel Orientation="Horizontal">
                                            <fa:ImageAwesome Icon="Gamepad" Width="20" Height="20" 
                                                             Foreground="#4CAF50" VerticalAlignment="Center" Margin="0,0,10,0"/>
                                            <TextBlock Text="Other Games" FontSize="18" FontWeight="Bold" 
                                                       FontFamily="Comic Sans MS" VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <TextBlock Text="24 games" FontSize="11" Foreground="#888" 
                                                   HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                    </Grid>

                                    <StackPanel>
                                        <Border Background="#F8F8F8" CornerRadius="10" Margin="0,5" 
                                                Height="90" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="100" Height="70" 
                                                           RadiusX="8" RadiusY="8" Margin="10">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                                                    <TextBlock Text="League of Legends" FontSize="16" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="203h played" FontSize="11" Foreground="#666" Margin="0,0,10,0"/>
                                                        <Border Background="#E8F5E9" CornerRadius="3" Padding="4,2">
                                                            <TextBlock Text="MOBA" FontSize="9" Foreground="#2E7D32"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Button Style="{StaticResource PurplePlayButtonStyle}"
                                                        Grid.Column="2" Content="PLAY" Background="#9C27B0" 
                                                        Foreground="White" FontWeight="Bold" FontSize="12" 
                                                        Height="30" Width="80" Margin="0,0,10,0"
                                                        BorderThickness="0" Cursor="Hand" FontFamily="Comic Sans MS">
                                                </Button>
                                            </Grid>
                                        </Border>

                                        <Border Background="#F8F8F8" CornerRadius="10" Margin="0,5" 
                                                Height="90" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="100" Height="70" 
                                                           RadiusX="8" RadiusY="8" Margin="10">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                                                    <TextBlock Text="Genshin Impact" FontSize="16" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="89h played" FontSize="11" Foreground="#666" Margin="0,0,10,0"/>
                                                        <Border Background="#E1F5FE" CornerRadius="3" Padding="4,2">
                                                            <TextBlock Text="RPG" FontSize="9" Foreground="#0277BD"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Button Style="{StaticResource PurplePlayButtonStyle}"
                                                        Grid.Column="2" Content="PLAY" Background="#9C27B0" 
                                                        Foreground="White" FontWeight="Bold" FontSize="12" 
                                                        Height="30" Width="80" Margin="0,0,10,0"
                                                        BorderThickness="0" Cursor="Hand" FontFamily="Comic Sans MS">
                                                </Button>
                                            </Grid>
                                        </Border>

                                        <Border Background="#F8F8F8" CornerRadius="10" Margin="0,5" 
                                                Height="90" Cursor="Hand">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Rectangle Grid.Column="0" Width="100" Height="70" 
                                                           RadiusX="8" RadiusY="8" Margin="10">
                                                    <Rectangle.Fill>
                                                        <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                                    </Rectangle.Fill>
                                                </Rectangle>

                                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="5,0">
                                                    <TextBlock Text="Among Us" FontSize="16" FontWeight="Bold" 
                                                               FontFamily="Comic Sans MS"/>
                                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                        <TextBlock Text="34h played" FontSize="11" Foreground="#666" Margin="0,0,10,0"/>
                                                        <Border Background="#FFEBEE" CornerRadius="3" Padding="4,2">
                                                            <TextBlock Text="Party" FontSize="9" Foreground="#D32F2F"/>
                                                        </Border>
                                                    </StackPanel>
                                                </StackPanel>

                                                <Button Style="{StaticResource PurplePlayButtonStyle}"
                                                        Grid.Column="2" Content="PLAY" Background="#9C27B0" 
                                                        Foreground="White" FontWeight="Bold" FontSize="12" 
                                                        Height="30" Width="80" Margin="0,0,10,0"
                                                        BorderThickness="0" Cursor="Hand" FontFamily="Comic Sans MS">
                                                </Button>
                                            </Grid>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>

                <Border Grid.Row="2" Background="White" CornerRadius="15" Height="60" Margin="0,10,0,0">
                    <Button x:Name="btnAddGame" Background="Transparent" BorderThickness="0" 
                            Cursor="Hand" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Border Background="#9C27B0" CornerRadius="20" Width="35" Height="35" Margin="0,0,10,0">
                                <fa:ImageAwesome Icon="Plus" Width="18" Height="18" Foreground="White"/>
                            </Border>
                            <TextBlock Text="Add New Game to Library" FontSize="16" FontWeight="Bold" 
                                       FontFamily="Comic Sans MS" Foreground="#9C27B0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </Border>

            </Grid>
        </Border>
    </Grid>
</Page>