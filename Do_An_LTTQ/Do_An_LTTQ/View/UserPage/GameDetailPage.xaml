<Page x:Class="Do_An_LTTQ.View.UserPage.GameDetailPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="995"
      Title="GameDetailPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Background="{DynamicResource AppBackground}" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,20,0,10">
                <TextBlock Text="{Binding Title}" 
                           FontSize="32" FontWeight="Bold" FontFamily="Comic Sans MS" 
                           Foreground="{DynamicResource HeaderText}" 
                           HorizontalAlignment="Center" TextAlignment="Center"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="30,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.8*"/>
                    <ColumnDefinition Width="1.2*"/>
                </Grid.ColumnDefinitions>

                <Border CornerRadius="10" Margin="0,0,20,0" BorderBrush="Gray" BorderThickness="1">
                    <Image Source="{Binding MainCoverImageURL}" Stretch="UniformToFill" Height="250"/>
                </Border>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Description" Foreground="Gray" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding Description}" TextWrapping="Wrap" MaxHeight="100" TextTrimming="CharacterEllipsis" Foreground="{DynamicResource PrimaryText}" Margin="0,5,0,10" FontSize="12"/>

                    <TextBlock Text="Developer: " Foreground="Gray" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding DeveloperName}" Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,5"/>

                    <TextBlock Text="Release Date: " Foreground="Gray" FontWeight="Bold" FontSize="12"/>
                    <TextBlock Text="{Binding ReleaseDate, StringFormat=dd/MM/yyyy}" Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,15"/>

                    <Border Background="Transparent" CornerRadius="5" Padding="10">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="{Binding FinalPrice, StringFormat={}{0:N0} VNĐ}" 
                                       VerticalAlignment="Center" Margin="0,0,10,0" 
                                       FontSize="16" Foreground="#BEEE11" FontWeight="Bold"/>

                            <Border CornerRadius="8" Background="{DynamicResource AccentColor}">
                                <Button x:Name="btnAddToCart" Click="btnAddToCart_Click"
                                        Content="Add to Cart"
                                        FontSize="14" FontWeight="Bold" Foreground="White"
                                        Background="Transparent"
                                        BorderThickness="0" Padding="15,8"
                                        Cursor="Hand"/>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <StackPanel Grid.Row="2" Margin="30,10">
                <TextBlock Text="Tags:" Foreground="Gray" Margin="0,0,0,5" FontSize="12"/>
                <ItemsControl ItemsSource="{Binding CategoryList}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding}" 
                    Style="{StaticResource RoundButtonStyle}" 
                    Height="25" 
                    FontSize="11" 
                    Padding="10,0" 
                    Margin="0,0,5,5" 
                    Background="{DynamicResource AccentColor}" 
                    Foreground="{DynamicResource PrimaryText}"
                    Click="CategoryButton_Click"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <Border Grid.Row="3" Margin="30,10" BorderBrush="Gray" BorderThickness="0,1,0,0" Padding="0,10,0,20">
                <StackPanel>
                    <TextBlock Text="System Requirements" FontSize="16" FontWeight="Bold" Foreground="{DynamicResource PrimaryText}" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding SystemRequirements}" Foreground="LightGray" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"/>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</Page>