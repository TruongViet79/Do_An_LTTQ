<Page x:Class="Do_An_LTTQ.View.UserPage.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Do_An_LTTQ.View.UserPage"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d"
      d:DesignHeight="540" d:DesignWidth="995"
      Title="DashboardPage">

    <Grid>
        <Border Margin="20" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" CornerRadius="30" BorderThickness="0" BorderBrush="Black" Background="{DynamicResource AppBackground}">
            <StackPanel Orientation="Vertical">

                <StackPanel Orientation="Horizontal" Height="117">
                    <StackPanel Orientation="Vertical" Margin="15" Width="200">
                        <TextBlock Text="Welcome" Margin="10" FontSize="{DynamicResource FontSizeLarge}" Foreground="{DynamicResource PrimaryText}" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Comic Sans MS"></TextBlock>
                        <TextBlock x:Name="txtDisplayUsername" FontWeight="Bold" FontSize="{DynamicResource FontSizeHuge}" Foreground="{DynamicResource HeaderText}" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Comic Sans MS"></TextBlock>
                    </StackPanel>

                    <Border CornerRadius="8" BorderBrush="{DynamicResource CardBackground}" Width="400" BorderThickness="10" Margin="10" Height="50">
                        <Grid Background="{DynamicResource CardBackground}" Margin="0,-10,0,-10">
                            <fa:ImageAwesome Icon="Search" Width="20" Height="20"
                                     VerticalAlignment="Center" HorizontalAlignment="Left"
                                     Margin="10" Foreground="Gray"/>
                            <TextBox x:Name="txtDashboardSearch" 
                                     Background="Transparent" BorderThickness="0" Padding="35,0,5,0" 
                                     VerticalContentAlignment="Center"
                                     FontSize="{DynamicResource FontSizeNormal}"
                                     Foreground="Black" HorizontalAlignment="Center" Width="310"
                                     GotFocus="txtDashboardSearch_GotFocus"
                                     LostFocus="txtDashboardSearch_LostFocus"
                                     KeyUp="txtDashboardSearch_KeyUp"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAddFr" Background="Transparent" Style="{StaticResource RoundButtonStyle}" Margin="20">
                            <fa:ImageAwesome Icon="UserPlus" Width="50" Height="50"/>
                        </Button>
                        <Button x:Name="btnCart" Click="btnCart_Click" Background="Transparent" Style="{StaticResource RoundButtonStyle}" Margin="20">
                            <fa:ImageAwesome Icon="ShoppingBasket" Width="50" Height="50"/>
                        </Button>
                        <Button Margin="20" Background="Transparent" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Click="ButtonProfile_Click">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <Grid Background="{DynamicResource CardBackground}" Height="520" Width="950">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition Width="3*"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition Height="4*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Popular Free Games:" Margin="10"
                                TextAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}"></TextBlock>
                    <Button x:Name="btnFGame" Grid.Column="2" Grid.Row="0" Content="View all..." Style="{StaticResource IconTextButtonStyle}" Background="Transparent" FontSize="{DynamicResource FontSizeLarge}"/>

                    <ScrollViewer Grid.Row="1" Grid.ColumnSpan="3" VerticalAlignment="Top"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,10,0">
                        <ItemsControl x:Name="icFreeGames">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource GameCardButtonStyle}" Click="Game_Click">
                                        <StackPanel>
                                            <Rectangle Style="{StaticResource GameImageRectangleStyle}">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="{Binding MainCoverImageURL}" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource GameNameTextStyle}"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <TextBlock Grid.Row="2" Text="Popular Paid Game:" Margin="10"
                                TextAlignment="Left" VerticalAlignment="Center" FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}"></TextBlock>
                    <Button x:Name="btnPGame" Grid.Column="2" Grid.Row="2" Content="View all..." Style="{StaticResource IconTextButtonStyle}" Background="Transparent" FontSize="{DynamicResource FontSizeLarge}"/>

                    <ScrollViewer Grid.Row="3" Grid.ColumnSpan="3" VerticalAlignment="Center"
                                  HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,10,0">
                        <ItemsControl x:Name="icPaidGames">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource GameCardButtonStyle}" Click="Game_Click">
                                        <StackPanel>
                                            <Rectangle Style="{StaticResource GameImageRectangleStyle}">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="{Binding MainCoverImageURL}" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Title}" Style="{StaticResource GameNameTextStyle}"/>
                                            <TextBlock Text="{Binding FinalPrice, StringFormat={}{0:N0} VNĐ}"
                                                       Style="{StaticResource GameNameTextStyle}"
                                                       Foreground="OrangeRed" FontSize="12"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border x:Name="FriendList" Grid.Row="0" Grid.Column="2" Grid.RowSpan="4" Grid.ColumnSpan="2"
                        Width="100" BorderBrush="Gray" BorderThickness="1" CornerRadius="20" Height="500" Background="{DynamicResource CardBackground}"
                        HorizontalAlignment="Right"
                        MouseEnter="FriendList_MouseEnter"
                        MouseLeave="FriendList_MouseLeave">

                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Background="Transparent">
                            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                                <Border Style="{StaticResource FriendItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="60" Height="60">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Resources/idle2.png"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock Text="Player Name" Style="{StaticResource FriendNameStyle}"/>
                                            <TextBlock Text="Online" Style="{StaticResource FriendStatusStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border Style="{StaticResource FriendItemStyle}">
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse Width="60" Height="60">
                                            <Ellipse.Fill>
                                                <ImageBrush ImageSource="/Resources/idle2.png"/>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <StackPanel VerticalAlignment="Center" Margin="10,0,0,0">
                                            <TextBlock Text="Friend Test" Style="{StaticResource FriendNameStyle}"/>
                                            <TextBlock Text="Offline" Style="{StaticResource FriendStatusStyle}"/>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>

</Page>