<Page x:Class="Do_An_LTTQ.View.UserPage.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Do_An_LTTQ.View.UserPage"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="995"
      Title="DashboardPage">

    <Grid>
        <Border Margin="20" CornerRadius="30" BorderThickness="0" Background="#E8D9F0">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" Height="117">
                    <StackPanel Orientation="Vertical" Margin="15" Width="200">
                        <TextBlock Text="Welcome" Margin="10" FontSize="{DynamicResource FontSizeLarge}" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Comic Sans MS"/>
                        <TextBlock x:Name="txtDisplayUsername" FontWeight="Bold" FontSize="{DynamicResource FontSizeHuge}" VerticalAlignment="Center" TextAlignment="Center" FontFamily="Comic Sans MS"/>
                    </StackPanel>

                    <Border CornerRadius="8" Width="400" BorderThickness="10" BorderBrush="White" Margin="10" Height="50">
                        <Grid Background="White" Margin="0,-10,0,-10">
                            <fa:ImageAwesome Icon="Search" Width="20" Height="20" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10" Foreground="Gray"/>
                            <TextBox Background="Transparent" BorderThickness="0" Padding="35,0,5,0" VerticalContentAlignment="Center" FontSize="{DynamicResource FontSizeNormal}" Text="Search game" Foreground="Gray" HorizontalAlignment="Center" Width="310"/>
                        </Grid>
                    </Border>

                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnAddFr" Background="Transparent" Style="{StaticResource RoundButtonStyle}" Margin="20">
                            <fa:ImageAwesome Icon="UserPlus" Width="50" Height="50"/>
                        </Button>
                        <Button x:Name="btnNoti" Background="Transparent" Style="{StaticResource RoundButtonStyle}" Margin="20">
                            <fa:ImageAwesome Icon="Bell" Width="50" Height="50"/>
                        </Button>
                        <Button Margin="20" Background="Transparent" BorderThickness="0" Style="{StaticResource RoundButtonStyle}" Click="ButtonProfile_Click">
                            <Ellipse Width="50" Height="50">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>
                    </StackPanel>
                </StackPanel>

                <Grid Height="480" Width="950">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0">
                        <TextBlock Text="Popular Free Games:" FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" VerticalAlignment="Center"/>
                        <Button x:Name="btnFGame" Content="View all..." Style="{StaticResource IconTextButtonStyle}" Background="Transparent" FontSize="{DynamicResource FontSizeNormal}" Margin="20,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10,5">
                        <ItemsControl x:Name="icFreeGames">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="150" Margin="10" Background="White" CornerRadius="15" BorderThickness="1" BorderBrush="#DDD">
                                        <StackPanel>
                                            <Rectangle Width="150" Height="100" RadiusX="15" RadiusY="15">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="{Binding MainCoverImageURL}" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Title}" Margin="5,5,5,2" FontWeight="Bold" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" MaxHeight="40"/>
                                            <TextBlock Text="FREE" Margin="0,0,0,5" Foreground="Green" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10,10,10,0">
                        <TextBlock Text="Popular Paid Games:" FontWeight="Bold" FontSize="{DynamicResource FontSizeLarge}" VerticalAlignment="Center"/>
                        <Button x:Name="btnPGame" Content="View all..." Style="{StaticResource IconTextButtonStyle}" Background="Transparent" FontSize="{DynamicResource FontSizeNormal}" Margin="20,0,0,0"/>
                    </StackPanel>

                    <ScrollViewer Grid.Row="3" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10,5">
                        <ItemsControl x:Name="icPaidGames">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Width="150" Margin="10" Background="White" CornerRadius="15" BorderThickness="1" BorderBrush="#DDD">
                                        <StackPanel>
                                            <Rectangle Width="150" Height="100" RadiusX="15" RadiusY="15">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="{Binding MainCoverImageURL}" Stretch="UniformToFill"/>
                                                </Rectangle.Fill>
                                            </Rectangle>
                                            <TextBlock Text="{Binding Title}" Margin="5,5,5,2" FontWeight="Bold" FontSize="13" TextAlignment="Center" TextWrapping="Wrap" MaxHeight="40"/>
                                            <TextBlock Text="{Binding FinalPrice, StringFormat={}{0:N0} VNĐ}" Margin="0,0,0,5" Foreground="OrangeRed" FontSize="12" HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <Border x:Name="FriendList" Grid.Row="0" Grid.RowSpan="4" Width="100" BorderBrush="Gray" BorderThickness="1" CornerRadius="20" Background="White" HorizontalAlignment="Right" Canvas.ZIndex="100" MouseEnter="FriendList_MouseEnter" MouseLeave="FriendList_MouseLeave">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="Friends" HorizontalAlignment="Center" Margin="0,10" FontWeight="Bold"/>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>