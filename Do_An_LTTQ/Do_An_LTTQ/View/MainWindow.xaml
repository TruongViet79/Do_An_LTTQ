<Window x:Class="Do_An_LTTQ.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Do_An_LTTQ"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        ResizeMode="NoResize">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="7*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="6*"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="G a M e m o r y" Background="White" TextAlignment="Center" VerticalAlignment="Center" FontSize="30"
                       FontWeight="Bold" FontFamily="Comic Sans MS"/>
        <StackPanel Grid.Row="1" Grid.RowSpan="2" Background="White">
            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnDashboard"
                    Click="btnDashboard_Click">
                <StackPanel Orientation="Horizontal">
                    <fa:ImageAwesome Icon="Home" Width="30" Height="30" Margin="5"/>
                    <TextBlock Text="Dashboard" FontSize="20" Margin="10"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnStore">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="ShoppingCart" Width="30" Height="30" Margin="5"/>
                    <TextBlock Text="Store" FontSize="20" Margin="10"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnSettings"
                    Click="btnSettings_Click">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="Gear" Width="30" Height="30" Margin="5"/>
                    <TextBlock Text="Settings" FontSize="20" Margin="10"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnLibrary">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="ShoppingBag" Width="30" Height="30" Margin="5"/>
                    <TextBlock Text="Library" FontSize="20" Margin="10"/>
                </StackPanel>
            </Button>
            <Border Height="276" Margin="20" Background="Lavender" CornerRadius="20" BorderThickness="2" BorderBrush="Lavender">
                <StackPanel Height="283" VerticalAlignment="Top">
                    <Rectangle Height="120" Margin="20">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="/Resources/idle2.png" Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock Text="Last game played:" TextAlignment="Center" FontSize="20" FontWeight="Bold" Margin="5" FontFamily="Comic Sans MS"></TextBlock>
                    <Button x:Name="btnPAgain" Style="{StaticResource IconTextButtonStyle}" Margin="5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Play again?" FontSize="20" Margin="10" FontFamily="Comic Sans MS" FontWeight="Bold" Width="150" TextAlignment="Center" Height="45" RenderTransformOrigin="0.519,1.223"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>
        <Frame x:Name="MainContent" Grid.Column="1" Grid.Row="0" Grid.RowSpan="3"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
