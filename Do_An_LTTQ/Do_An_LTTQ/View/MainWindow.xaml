<Window x:Class="Do_An_LTTQ.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Do_An_LTTQ"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="AppBackground" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#F3E5F5"/>
        <SolidColorBrush x:Key="AccentColor" Color="#9C27B0"/>
        <SolidColorBrush x:Key="HighlightColor" Color="#E91E63"/>
        <SolidColorBrush x:Key="PrimaryText" Color="#4B5563"/>
        <SolidColorBrush x:Key="HeaderText" Color="#9C27B0"/>
    </Window.Resources>

    <Grid Background="{StaticResource AppBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"></ColumnDefinition>
            <ColumnDefinition Width="9*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderBrush="#E5E7EB" BorderThickness="0,0,1,1" 
                Background="{StaticResource SidebarBackground}">
            <TextBlock Text="G a M e m o r y" Background="Transparent" 
                       Foreground="{StaticResource HeaderText}" TextAlignment="Center" 
                       VerticalAlignment="Center" FontSize="25"
                       FontWeight="Bold" FontFamily="Comic Sans MS"/>
        </Border>

        <StackPanel Grid.Row="1" Background="{StaticResource SidebarBackground}">

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnDashboard"
                    Click="btnDashboard_Click" Background="Transparent" BorderThickness="0" 
                    Foreground="{StaticResource PrimaryText}">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="Home" Width="30" Height="30" Margin="5"
                                     Foreground="{StaticResource AccentColor}"/>
                    <TextBlock Text="Dashboard" FontSize="16" Margin="10"
                               Foreground="{StaticResource PrimaryText}" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnStore"
                    Background="Transparent" BorderThickness="0"
                    Click="btnStore_Click" Foreground="{StaticResource PrimaryText}">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="ShoppingCart" Width="30" Height="30" Margin="5"
                                     Foreground="{StaticResource AccentColor}"/>
                    <TextBlock Text="Store" FontSize="16" Margin="10"
                               Foreground="{StaticResource PrimaryText}" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnSettings"
                    Click="btnSettings_Click" Background="Transparent" BorderThickness="0" 
                    Foreground="{StaticResource PrimaryText}">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="Gear" Width="30" Height="30" Margin="5"
                                     Foreground="{StaticResource AccentColor}"/>
                    <TextBlock Text="Settings" FontSize="16" Margin="10"
                               Foreground="{StaticResource PrimaryText}" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource IconTextButtonStyle}" Margin="10" x:Name="btnLibrary"
                    Background="Transparent" BorderThickness="0"
                    Click="btnLibrary_Click" Foreground="{StaticResource PrimaryText}">
                <StackPanel Orientation="Horizontal" Width="158">
                    <fa:ImageAwesome Icon="ShoppingBag" Width="30" Height="30" Margin="5"
                                     Foreground="{StaticResource AccentColor}"/>
                    <TextBlock Text="Library" FontSize="16" Margin="10"
                               Foreground="{StaticResource PrimaryText}" FontWeight="Bold"/>
                </StackPanel>
            </Button>

            <Border Height="276" Margin="20" CornerRadius="12" BorderThickness="1" BorderBrush="#E5E7EB"
                    Background="White">
                <StackPanel Height="283" VerticalAlignment="Top">
                    <Rectangle x:Name="rectLastGameImage" Height="136" Margin="20,20,20,10" Width="149" RadiusX="8" RadiusY="8">
                        <Rectangle.Fill>
                            <ImageBrush x:Name="imgLastGame" ImageSource="pack://application:,,,/Do_An_LTTQ;component/Resources/idle2.png" 
                                        Stretch="UniformToFill"/>
                        </Rectangle.Fill>
                    </Rectangle>
                    <TextBlock x:Name="txtStatusLabel" Text="" TextAlignment="Center" FontSize="16" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="{StaticResource HighlightColor}"/>
                    <TextBlock x:Name="txtGameTitleDisplay" Text="Last Game" TextAlignment="Center" FontSize="20" FontWeight="Bold" FontFamily="Comic Sans MS" Foreground="{StaticResource PrimaryText}" TextTrimming="CharacterEllipsis" Margin="0,5,0,10"/>

                    <Button x:Name="btnPAgain" 
                            Background="{StaticResource AccentColor}" 
                            Width="170" Height="45" >
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtButtonText" Text="Play Again" FontSize="16" 
                                       Foreground="White" FontFamily="Comic Sans MS" FontWeight="Bold" 
                                       Width="154" TextAlignment="Center" Height="33" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </StackPanel>

        <Frame x:Name="MainContent" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2"
               NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>