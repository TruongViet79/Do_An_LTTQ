<Page x:Class="Do_An_LTTQ.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Do_An_LTTQ"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Profile"
      Background="White">

    <Grid>
        <StackPanel VerticalAlignment="Top" Margin="40,40,40,40">
            <Ellipse Width="80" Height="80" Stroke="Black" StrokeThickness="2" Margin="0,0,0,20">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="https://robohash.org/1" Stretch="UniformToFill"></ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock
                Text="User name:"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="5,0,0,5"></TextBlock>
            <TextBlock
                Text="Email:"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="5,0,0,5"></TextBlock>
            <TextBlock
                Text="Date of birth:"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="5,0,0,5"></TextBlock>
            <TextBlock
                Text="Country:"
                FontSize="24"
                FontWeight="Bold"
                HorizontalAlignment="Left"
                Margin="5,0,0,5"></TextBlock>
        </StackPanel>
    </Grid>
</Page>
