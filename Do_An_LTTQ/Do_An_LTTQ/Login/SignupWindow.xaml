<Window x:Class="Do_An_LTTQ.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Memory - Sign Up" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFFFFFFF" Offset="0"/>
                <GradientStop Color="#FFFCE4EC" Offset="0.5"/>
                <GradientStop Color="#FFE8EAF6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Width="450"
                Height="600"
                Background="White"
                CornerRadius="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center">
            <Border.Effect>
                <DropShadowEffect Color="#CCCCCC" BlurRadius="30" ShadowDepth="0" Opacity="0.4"/>
            </Border.Effect>

            <StackPanel Margin="50,30">
                <TextBlock Text="Create Account"
                           FontFamily="Comic Sans MS" 
                           FontSize="42"
                           FontWeight="Bold" 
                           Foreground="#9C27B0"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Join GaMemory"
                           FontFamily="Comic Sans MS" 
                           FontSize="16"
                           Foreground="#999999"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Username" 
                           FontFamily="Comic Sans MS" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <TextBox x:Name="txtUsername" 
                         Style="{StaticResource InputBox}"
                         Height="45"
                         Margin="0,0,0,20"/>

                <TextBlock Text="Password" 
                           FontFamily="Comic Sans MS" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="pwPassword" 
                             Style="{StaticResource InputPassword}"
                             Height="45"
                             Margin="0,0,0,20"/>

                <TextBlock Text="Confirm Password" 
                           FontFamily="Comic Sans MS" 
                           FontSize="14" 
                           FontWeight="SemiBold"
                           Foreground="#666666"
                           Margin="0,0,0,8"/>
                <PasswordBox x:Name="pwCFPassword" 
                             Style="{StaticResource InputPassword}"
                             Height="45"
                             Margin="0,0,0,30"/>

                <Button x:Name="OkButton"
                        Content="Sign Up"
                        Style="{StaticResource SignupButton}"
                        Height="50"
                        Background="#FF9C27B0"
                        Click="OkButton_Click"/>

                <TextBlock HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Run Text="Already have an account?" 
                         FontFamily="Comic Sans MS"
                         FontSize="14"
                         Foreground="#999999"/>
                    <Hyperlink Click="BackToLogin_Click"
                               TextDecorations="None">
                        <Run Text="Sign In" 
                             FontFamily="Comic Sans MS"
                             FontSize="14"
                             FontWeight="Bold"
                             Foreground="#6B4CE8"/>
                    </Hyperlink>
                </TextBlock>
            </StackPanel>
        </Border>

        <Button Content="✕" 
                FontFamily="Comic Sans MS"
                FontSize="20"
                FontWeight="Bold"
                Width="40" 
                Height="40"
                HorizontalAlignment="Right" 
                VerticalAlignment="Top"
                Margin="20"
                Background="#DDD"
                Foreground="#666"
                BorderThickness="0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            CornerRadius="20">
                        <ContentPresenter HorizontalAlignment="Center" 
                                        VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#DDD"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#9C27B0"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
</Window>