<Window x:Class="Do_An_LTTQ.SignupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Do_An_LTTQ"
        mc:Ignorable="d"
        Title="SignupWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Sign up" 
           FontSize="28" 
           FontWeight="Bold" 
           Margin="0,5,0,10" 
           HorizontalAlignment="Center"/>
            <Label Content="User name" 
       FontSize="20" 
       Margin="5,10,5,0"></Label>
            <TextBox x:Name="txtUsername" 
         Height="30" 
         Padding="5" 
         Margin="5,0,5,5" 
         Background="#FF0063EC"
         Foreground="White"></TextBox>
            <Label Content="New password:"
                   FontSize="20"
                   Margin="5,0,5,0"></Label>
            <PasswordBox x:Name="pwPassword"
             Height="30"
             Padding="5"
             Margin="5,0,5,5"
             Background="#FF3A6587"
             Foreground="White"
             BorderThickness="0"></PasswordBox>
            <Label Content="Confirm new password:"
                   FontSize="20"
                   Margin="5,0,5,0"></Label>
            <PasswordBox x:Name="txtPassword"
                         Height="30"
                         Padding="5"
                         Margin="5,0,5,5"
                         Background="#2a475e"
                         Foreground="White"
                         BorderThickness="0"></PasswordBox>
            <Label Content="Email"
                    FontSize="20"
                    Margin="5,0,5,0"></Label>
            <TextBox x:Name="txtEmail" 
                    Height="30" 
                    Padding="5" 
                    Margin="5,0,5,5" 
                    Background="#FF0F4187"
                    Foreground="White"></TextBox>
            <Grid Margin="5,15,0,5">
                <Button Content="OK"
            HorizontalAlignment="Right"
            Width="100"
            Height="20"
            Background="#FF2D588C"
            Foreground="White"
            BorderThickness="0"
            Cursor="Hand"
            Click="OkButton_Click"
            IsDefault="True"></Button>
                <Button Content="Back"
            HorizontalAlignment="Left"
            Width="100"
            Height="20"
            Background="#FFB0B8D2"
            Foreground="#FF0A2A7E"
            BorderThickness="0"
            Cursor="Hand"
            Click="BackButton_Click">
                </Button>
            </Grid>
        </StackPanel>
    </Grid>
</Window>
